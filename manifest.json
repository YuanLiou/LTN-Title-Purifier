{
  "manifest_version": 3,
  "name": "LTN 新聞標題重寫器",
  "version": "1.0",
  "description": "使用本地 LLM 重寫自由時報新聞標題",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://news.ltn.com.tw/",
    "https://today.line.me/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://news.ltn.com.tw/list/breakingnews*", "https://today.line.me/tw/v3/tab*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html"
  }
}
